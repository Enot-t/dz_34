CREATE TABLE IF NOT EXISTS Films(
	id INTEGER PRIMARY KEY AUTOINCREMENT,
	title TEXT NOT NULL,
	release_date DATE NOT NULL,
	genre TEXT NOT NULL,
	duration INTEGER NOT NULL
);

