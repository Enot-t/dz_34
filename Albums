CREATE TABLE IF NOT EXISTS Albums(
	id INTEGER PRIMARY KEY AUTOINCREMENT,
	title TEXT NOT NULL,
	artist TEXT NOT NULL,
	release_date date NOT NULL,
	genre TEXT NOT NULL
	);

